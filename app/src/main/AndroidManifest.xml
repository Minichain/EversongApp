<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.upf.minichain.eversongapp">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.EversongActivity"
            android:screenOrientation="portrait"
            android:process=":EversongActivityProcess">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".activities.EversongActivity"
            android:screenOrientation="portrait"
            android:process=":SettingsActivityProcess">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.EversongActivity"/>
        </activity>

        <activity android:name=".activities.CreditsActivity"
            android:label="Credits"
            android:parentActivityName=".activities.EversongActivity"
            android:screenOrientation="portrait"
            android:process=":CreditsActivityProcess">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.EversongActivity"/>
        </activity>

        <service
            android:name=".services.EversongService"
            android:process=":EversongServiceProcess">
        </service>
    </application>

</manifest>