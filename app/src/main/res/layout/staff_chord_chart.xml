<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EversongActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/staff_chord_chart_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/staff_chord_chart_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:foregroundGravity="center"
            android:src="@drawable/staff_chord_chart_staff_02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/staff_chord_chart_note_clef"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/staff_chord_chart_clef_g"
            android:foregroundGravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="200dp"
            app:layout_constraintBottom_toBottomOf="@+id/staff_chord_chart_layout"
            />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/staff_chord_chart_note_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/staff_chord_chart_layout"
            android:layout_marginBottom="21dp">
            <ImageView
                android:id="@+id/staff_chord_chart_note_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/staff_chord_chart_note_1"
                />

            <ImageView
                android:id="@+id/staff_chord_chart_sharp_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/staff_chord_chart_sharp"
                app:layout_constraintRight_toLeftOf="@+id/staff_chord_chart_note_1"
                android:layout_marginRight="50dp"
                />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/staff_chord_chart_note_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/staff_chord_chart_layout"
            android:layout_marginBottom="21dp">
            <ImageView
                android:id="@+id/staff_chord_chart_note_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/staff_chord_chart_note_1"
                />

            <ImageView
                android:id="@+id/staff_chord_chart_sharp_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/staff_chord_chart_sharp"
                app:layout_constraintRight_toLeftOf="@+id/staff_chord_chart_note_2"
                android:layout_marginRight="50dp"
                />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/staff_chord_chart_note_layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/staff_chord_chart_layout"
            android:layout_marginBottom="21dp">
            <ImageView
                android:id="@+id/staff_chord_chart_note_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/staff_chord_chart_note_1"
                />

            <ImageView
                android:id="@+id/staff_chord_chart_sharp_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/staff_chord_chart_sharp"
                app:layout_constraintRight_toLeftOf="@+id/staff_chord_chart_note_3"
                android:layout_marginRight="50dp"
                />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/staff_chord_chart_note_layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/staff_chord_chart_layout"
            android:layout_marginBottom="21dp">
            <ImageView
                android:id="@+id/staff_chord_chart_note_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/staff_chord_chart_note_1"
                />

            <ImageView
                android:id="@+id/staff_chord_chart_sharp_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/staff_chord_chart_sharp"
                app:layout_constraintRight_toLeftOf="@+id/staff_chord_chart_note_4"
                android:layout_marginRight="50dp"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>