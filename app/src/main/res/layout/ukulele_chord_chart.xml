<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ukulele_chord_chart_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/ukulele_chord_chart_frets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:foregroundGravity="center"
            android:src="@drawable/ukulele_chord_chart_frets"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ukulele_chord_string_01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/guitar_chord_string_00"
            android:foregroundGravity="center_horizontal" />

        <ImageView
            android:id="@+id/ukulele_chord_string_02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/guitar_chord_string_00"
            android:foregroundGravity="center_horizontal"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintTop_toBottomOf="@+id/ukulele_chord_string_01" />

        <ImageView
            android:id="@+id/ukulele_chord_string_03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/guitar_chord_string_00"
            android:foregroundGravity="center_horizontal"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintTop_toBottomOf="@+id/ukulele_chord_string_02" />

        <ImageView
            android:id="@+id/ukulele_chord_string_04"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/guitar_chord_string_00"
            android:foregroundGravity="center_horizontal"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintTop_toBottomOf="@+id/ukulele_chord_string_03" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>